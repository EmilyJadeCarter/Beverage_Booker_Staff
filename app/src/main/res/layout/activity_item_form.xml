<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: " />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="title" />

    <EditText
        android:id="@+id/editTextShortDesc"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="shortdesc" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="price" />

    <CheckBox
        android:id="@+id/milkOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="milk" />

    <CheckBox
        android:id="@+id/sugarOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sugar" />

    <CheckBox
        android:id="@+id/decafOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decaf" />

    <CheckBox
        android:id="@+id/extrasOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="extras" />

    <CheckBox
        android:id="@+id/frappeOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="frappe" />

    <CheckBox
        android:id="@+id/heatedOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heated" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="200dp"
        android:text="Add"
        android:textSize="15dp" />


</LinearLayout>