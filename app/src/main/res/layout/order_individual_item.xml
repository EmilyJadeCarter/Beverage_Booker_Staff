<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="4dp"

        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/textView_itemID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:text="ItemID" />

        <TextView
            android:id="@+id/textView_itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textView_itemID"
            android:text="Item Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemQuantityHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="30dp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/itemQuantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/itemQuantityHeading"
            android:text="Quantity Value"
            android:textStyle="bold"
             />

        <CheckBox
            android:id="@+id/checkBox_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"/>

         />

    </RelativeLayout>

</androidx.cardview.widget.CardView>